@model IEnumerable<Ajax4.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<head runat="server">  
    <title>Demo</title>  
    <meta charset="utf-8" />  
    <meta name="viewport" content="width=device-width, initial-scale=1" />  
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script> 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>  

        <script type="text/javascript">
    $(document).ready(function () {
        $("#btnSubmit").click(function () {
            $.ajax({
                type : "POST",
                url : "/Employee/AjaxEmployee",
                dataType : "json",
                data: {a : $("#empName0").val() , b : $("#designation0").val(), 
                c: $("#salary0").val() , d: $("#address0").val()},
           
                success: function(response)
                {
                    alert("Helloo" + JSON.stringify(response));
                },
                error : function(response)
                {
                    alert(response.responseText);
                }
            });
        });
    });
</script>

    <form id="form1" runat="server">  
        <div class="container">  
            <h2>Basic Table</h2>  
            <table class="table" id="maintable">  
                <thead>  
                    <tr>  
                        <th>Employee Name</th>  
                        <th>Designation</th>  
                        <th>Salary</th> 
                        <th>Address</th> 
                    </tr>  
                </thead>  
                <tbody>  
                    <tr class="data-contact-person">  
                        <td>  
                            <input type="text" id="empName0" class="form-control empName01" /></td>  
                        <td>  
                            <input type="text" id="designation0" class="form-control Designation01" /></td>  
                        <td>  
                            <input type="number" step="0.01" id="salary0" class="form-control Salary01" /></td>  
                        <td>  
                            <input type="text" id="address0" class="form-control Address01" /></td>  
                        <td>  
                            <button type="button" id="btnAdd" class="btn btn-xs btn-primary classAdd">Add More</button>  
                        </td>  
                    </tr>  
                </tbody>  
            </table>  
            <button type="button" id="btnSubmit" class="btn btn-primary btn-md pull-right btn-sm">Submit</button>  
        </div>  
    </form>  

    <table>
    <thead>
        <tr>
            <th>@Html.DisplayName("Employee Name")</th>
            <th>@Html.DisplayName("Designation")</th>
            <th>@Html.DisplayName("Salary")</th>
            <th>@Html.DisplayName("Address")</th>
        </tr>
    </thead>
    <tbody id="test">
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EmpName)</td>
                <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
            </tr>
        }
    </tbody>

</table>

</body> 

